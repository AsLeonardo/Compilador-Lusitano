// FunÃ§Ã£o recursiva para calcular Fibonacci
funcao fibonacci(n: inteiro): inteiro {
    se (n <= 1) {
        retorna n
    }
    retorna fibonacci(n - 1) + fibonacci(n - 2)
}

// FunÃ§Ã£o iterativa (mais eficiente)
funcao fibonacciIterativo(n: inteiro): inteiro {
    se (n <= 1) {
        retorna n
    }
    
    var anterior: inteiro = 0
    var atual: inteiro = 1
    var proximo: inteiro = 0
    
    para i de 2 ate n {
        proximo = anterior + atual
        anterior = atual
        atual = proximo
    }
    
    retorna atual
}

// Verifica se um nÃºmero Ã© primo
funcao ehPrimo(n: inteiro): logico {
    se (n < 2) {
        retorna falso
    }
    
    var i: inteiro = 2
    enquanto (i * i <= n) {
        se (n % i == 0) {
            retorna falso
        }
        i = i + 1
    }
    
    retorna verdadeiro
}

